<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/layout">

    <data>
        <variable name="orderViewModel" type="com.bomi.hapo.freight_app.viewmodel.OrderViewModel"/>

    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/layout_padding_size">

        <TextView
                android:id="@+id/order_weight_title_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/textview_height_normal_size"
                android:text="@string/weight"
                android:gravity="center"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_type_title_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/order_weight_et"
        />
        <EditText
                android:id="@+id/order_weight_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/edittext_height_normal_size"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintLeft_toRightOf="@+id/order_weight_title_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_type_et"
        />
        <TextView
                android:id="@+id/order_type_title_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/textview_height_normal_size"
                android:text="@string/type"
                android:gravity="center"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/order_type_et"
                app:layout_constraintTop_toBottomOf="@+id/order_weight_title_tv"
                app:layout_constraintBottom_toTopOf="@+id/order_departure_title_tv"
        />
        <EditText
                android:id="@+id/order_type_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/edittext_height_normal_size"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintLeft_toRightOf="@+id/order_type_title_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_departure_empty_fl"
                app:layout_constraintTop_toBottomOf="@+id/order_weight_et"
        />
        <TextView
                android:id="@+id/order_departure_title_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/textview_height_normal_size"
                android:text="@string/departure"
                android:gravity="center"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintTop_toBottomOf="@+id/order_type_title_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_departure_et"
                app:layout_constraintRight_toLeftOf="@+id/order_departure_empty_fl"
        />
        <FrameLayout
                android:id="@+id/order_departure_empty_fl"
                android:layout_width="0dp"
                android:layout_height="@dimen/textview_height_normal_size"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintLeft_toRightOf="@+id/order_departure_title_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_departure_empty_fl2"
                app:layout_constraintTop_toBottomOf="@+id/order_type_et"
        />
        <EditText
                android:id="@+id/order_departure_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_normal_size"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_arrival_title_tv"
                app:layout_constraintTop_toBottomOf="@+id/order_departure_title_tv"
        />
        <FrameLayout
                android:id="@+id/order_departure_empty_fl2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_normal_size"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_arrival_empty_fl"
                app:layout_constraintTop_toBottomOf="@+id/order_departure_empty_fl"
        />
        <TextView
                android:id="@+id/order_arrival_title_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/textview_height_normal_size"
                android:text="@string/arrival"
                android:gravity="center"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintTop_toBottomOf="@+id/order_departure_et"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_arrival_et"
                app:layout_constraintRight_toLeftOf="@+id/order_arrival_empty_fl"

        />
        <FrameLayout
                android:id="@+id/order_arrival_empty_fl"
                android:layout_width="0dp"
                android:layout_height="@dimen/textview_height_normal_size"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintLeft_toRightOf="@+id/order_arrival_title_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_arrival_empty_fl2"
                app:layout_constraintTop_toBottomOf="@+id/order_departure_empty_fl2"
        />
        <EditText
                android:id="@+id/order_arrival_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_normal_size"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_arrival_title_tv"
        />
        <FrameLayout
                android:id="@+id/order_arrival_empty_fl2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_normal_size"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_arrival_empty_fl"
        />
        <TextView
                android:id="@+id/order_hope_time_title_tv"
                android:layout_width="0dp" 
                android:layout_height="@dimen/textview_height_normal_size"
                android:text="@string/hope_time"
                android:gravity="center"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintTop_toBottomOf="@+id/order_arrival_et"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_hope_price_title_tv"
                app:layout_constraintRight_toLeftOf="@+id/order_hope_time_date_et"
        />
        <EditText
                android:id="@+id/order_hope_time_date_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/edittext_height_normal_size"
                app:layout_constraintHorizontal_weight="0.4"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/order_arrival_et"
                app:layout_constraintLeft_toRightOf="@+id/order_hope_time_title_tv"
                app:layout_constraintRight_toLeftOf="@+id/order_hope_time_time_et"
                app:layout_constraintBottom_toTopOf="@+id/order_hope_price_et"
        />
        <EditText
                android:id="@+id/order_hope_time_time_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/edittext_height_normal_size"
                app:layout_constraintHorizontal_weight="0.3"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/order_arrival_et"
                app:layout_constraintLeft_toRightOf="@+id/order_hope_time_date_et"
                app:layout_constraintRight_toRightOf="parent"
        />
        <TextView
                android:id="@+id/order_hope_price_title_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/textview_height_normal_size"
                android:text="@string/hope_price"
                android:gravity="center"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintTop_toBottomOf="@+id/order_hope_time_title_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_addition_title_tv"
                app:layout_constraintRight_toLeftOf="@+id/order_hope_price_et"
        />
        <EditText
                android:id="@+id/order_hope_price_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/edittext_height_normal_size"
                app:layout_constraintHorizontal_weight="0.4"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/order_addition_empty_fl"
                app:layout_constraintTop_toBottomOf="@+id/order_hope_time_date_et"
                app:layout_constraintLeft_toRightOf="@+id/order_hope_price_title_tv"
                app:layout_constraintRight_toLeftOf="@+id/order_hope_price_avg_tv"
        />
        <TextView
                android:id="@+id/order_hope_price_avg_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/textview_height_normal_size"
                android:gravity="center"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintTop_toBottomOf="@+id/order_hope_time_time_et"
                app:layout_constraintLeft_toRightOf="@+id/order_hope_price_et"
                app:layout_constraintBottom_toTopOf="@+id/order_addition_empty_fl"
                app:layout_constraintRight_toRightOf="parent"
        />
        <TextView
                android:id="@+id/order_addition_title_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/textview_height_normal_size"
                android:text="@string/addition"
                android:gravity="center"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintTop_toBottomOf="@+id/order_hope_price_title_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/order_addition_et"
                app:layout_constraintRight_toLeftOf="@+id/order_addition_empty_fl"
        />
        <FrameLayout
                android:id="@+id/order_addition_empty_fl"
                android:layout_width="0dp"
                android:layout_height="@dimen/textview_height_normal_size"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/order_addition_title_tv"
                app:layout_constraintTop_toBottomOf="@+id/order_hope_price_et"
        />
        <EditText
                android:id="@+id/order_addition_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_remark_size"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_addition_title_tv"
        />
        <Button
                android:id="@+id/order_request_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_normal_size"
                android:text="@string/request"
                app:layout_constraintTop_toBottomOf="@+id/order_addition_et"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintBottom_toBottomOf="parent"
        />


    </android.support.constraint.ConstraintLayout>

</layout>